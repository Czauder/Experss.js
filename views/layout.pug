doctype html
mixin item(title, url)
  li(class='list-item')
     a(href=url class=path == url ? 'active' : '')=title


html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
   nav
    ul
         +item('Home', '/')
         +item('News', '/news')
         +item('Admin', '/admin')
    block content
